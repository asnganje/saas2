<%= turbo_frame_tag :modal do %>
<div class="fixed inset-0 bg-black/80"></div>
<div class="fixed inset-0 bg-gray-800 mt-8 p-8 size-96 mx-auto my-2 rounded-md pb-3 mb-3">
  <%= form_with model: @project, class:"flex items-center justify-between" do |f| %>
    <%=f.text_field :name,
      class:"bg-gray-100 py-1 rounded-l-md outline-none w-2/3 text-gray-950 px-1",
      placeholder:"Enter project name..."
    %>
    <%= f.submit "Update",
      class:"text-gray-200 w-1/3 bg-blue-500 hover:bg-blue-600 px-4 py-1 border border-gray-800 cursor-pointer rounded-r-md",
      data: {turbo_frame: "_top"}
    %>
  <div class="absolute right-2 top-2 cursor-pointer text-gray-200">
    <%= button_to projects_path do %>
      <%= inline_svg_tag("close.svg", class:"cursor-pointer text-gray-200")%>
    <% end %>
  </div>
  <%end%>
</div>
<% end %>