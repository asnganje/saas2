<div class="px-8 min-h-screen py-4 bg-gray-200">
  <nav class="flex items-center justify-between mb-8">
    <h1 class="text-4xl uppercase font-extrabold text-gray-900 hover:italic">
      <%= link_to "Logo"%>
    <h1>
    <div class="flex gap-6">
        <div class="bg-orange-500 p-2 rounded-md capitalize font-bold text-gray-200 hover:bg-orange-600">
          <%= link_to do%>
            <span class="flex items-center gap-2">Login <%= inline_svg_tag("arrow-right-circle.svg", class:"size-6")%></span>
          <%end%>
        </div>
        <div class="bg-gray-800 p-2 rounded-md capitalize font-bold text-gray-200 hover:bg-gray-600">
          <%= link_to "Signup"%>
        <div>
      </div>
    </div>
  </nav>
  <main class="relative grid md:flex items-center justify-around">
    <section class="md:basis-1/2">
      <div class="absolute top-0 w-1/2 hidden xl:flex justify-between">
        <%= inline_svg_tag("print.svg", class:"size-30")%>
        <%= inline_svg_tag("sign.svg", class:"size-30")%>
      </div>
      <h2 class="font-bold text-4xl capitalize mb-4">
        Manage your projects with ease!
      </h2>
      <p class="mb-8 text-2xl">
        Project Task is a project management tool that helps you organize your projects and tasks.
      </p>
      <div class="bg-orange-500 p-2 rounded-md cursor-pointer flex justify-center items-center text-gray-200 hover:bg-orange-600 text-4xl">
        <%= link_to class:"cursor-pointer" do %>
          <span class="flex gap-6">Get Started<%=inline_svg_tag("forward.svg", class:"size-12")%></span>
        <%end%>
      </div>
      <div class="absolute bottom-7 w-1/2 hidden xl:flex justify-between">
        <%= inline_svg_tag("star.svg", class:"size-30")%>
        <%= inline_svg_tag("flash.svg", class:"size-30")%>
      </div>
    </section>
    <div class="md:basis-1/2">
      <%= image_tag("/images/hero.png", class:"mt-8") %>
    </div>

  </main>
</div>